<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<!-- Used GitHub Copilot to allow resizing of the window and add horizontal scroll bar -->

<AnchorPane prefHeight="600.0" prefWidth="420.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="wout.ui.MainWindow">
    <children>
        <TextField fx:id="userInput"
                   onAction="#handleUserInput"
                   prefHeight="41.0"
                   AnchorPane.bottomAnchor="1.0"
                   AnchorPane.leftAnchor="1.0"
                   AnchorPane.rightAnchor="76.0" />
        <Button fx:id="sendButton"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="41.0"
                prefWidth="76.0"
                text="Send"
                AnchorPane.bottomAnchor="1.0"
                AnchorPane.rightAnchor="1.0" />
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="AS_NEEDED"
                    hvalue="1.0"
                    vvalue="1.0"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.bottomAnchor="42.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0">
            <content>
                <VBox fx:id="dialogContainer"/>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
